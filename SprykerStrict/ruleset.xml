<?xml version="1.0"?>
<ruleset name="SprykerStrict">
    <description>
        SprykerStrict Coding Standard.

        All sniffs in ./Sniffs will be auto loaded
    </description>

    <!-- Including general Spryker standard -->
    <rule ref="../Spryker/ruleset.xml"/>

    <rule ref="SprykerStrict.TypeHints.TypeHintDeclaration">
        <exclude name="SprykerStrict.TypeHints.TypeHintDeclaration.MissingTraversableParameterTypeHintSpecification"/>
        <exclude name="SprykerStrict.TypeHints.TypeHintDeclaration.MissingTraversablePropertyTypeHintSpecification"/>
        <exclude name="SprykerStrict.TypeHints.TypeHintDeclaration.MissingTraversableReturnTypeHintSpecification"/>
        <exclude name="SprykerStrict.TypeHints.TypeHintDeclaration.UselessParameterAnnotation"/>
        <exclude name="SprykerStrict.TypeHints.TypeHintDeclaration.UselessDocComment"/>
    </rule>

</ruleset>
